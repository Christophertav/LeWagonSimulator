
<div class="container-show-games">
  <%# <h1>show_view</h1> %>
  <div class="side-bar">
    <div class="time">
      Jour &nbsp;<%= @game.daily_challenge.position %>
      <i class="far fa-clock"></i>
      <%= @game.current_hour %>H
    </div>
    <div class="btn-action">
      <% if @game.current_hour < 18 %>
        <%= link_to '+1H', game_path(@game), method: :patch, class: "btn btn-primary" %>
      <% elsif @game.current_hour == 18 && @game.daily_challenge.position != 20  %>
        <%= link_to 'Fin de journÃ©e', game_path(@game), method: :patch, class: "btn btn-primary end-day" %>
      <% elsif @game.current_hour == 18 && @game.daily_challenge.position == 20 %>
        <%= link_to 'Fin de partie', game_daily_results_path(@game), class: "btn btn-primary end-game" %>
      <% end %>


      <%= link_to "Skip Day", game_path(@game, {help: 'skip'}), method: :patch, class: "btn btn-primary" %>

      <div class="button-help">
      </div>
    </div>
    <div class="score">
      <p>Score : <%= @game.score %> pts </p>
    </div>
  </div>
  <% @students = @game.students.order(classroom_position: :asc) %>

            <div class="background-appear" data-can-help=<%= @students[0].can_help? %> data-is-helped=<%= @students[0].is_helped  %> data-student-id=<%= @students[0].id %> data-game-id=<%= @game.id %> data-teacher-help=<%= @game.students.find_by(teacher_help: true) %>>
            </div>

>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= @students[0].name %></li>
                <li class="list-group-item"><%= @students[0].lives %> Vies</li>
                <li class="list-group-item"><%= @students[0].success_probability %>%</li>
                <li class="list-group-item">Exercice: <%= @students[0].exercise.position %></li>
              </ul>



</div>

