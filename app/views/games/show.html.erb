<div class="container-show-games" style= "display:grid; grid-template-columns: 1fr 1fr 1fr 1fr; grid-gap: 26px; margin-top: 16px; ">
  <% @game.students.order(:classroom_position).each do |student| %>
    <%= link_to do %>
      <div class="card" style="width: 18rem;" data-can-help=<%= student.can_help? %> data-is-helped=<%= student.is_helped  %> data-student-id=<%= student.id %> data-game-id=<%= @game.id %> data-teacher-help=<%= @game.students.find_by(teacher_help: true) %>>
        <div class="card-body">
          <h5 class="card-title"><%= student.name %></h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= student.lives %> Vies</li>
          <li class="list-group-item"><%= student.success_probability %>%</li>
          <li class="list-group-item">Exercice: <%= student.exercise.position %></li>
        </ul>
      </div>
    <% end %>
  <% end %>
