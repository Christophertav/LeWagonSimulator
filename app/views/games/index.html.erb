<% current_game = current_user.games.find_by(is_over: false) %>
  <% if current_user.games.empty? || current_game.nil? %>
    <%= link_to "PLAY", games_path, method: :post, class: "btn btn-danger" %>
  <% else %>
    <%= link_to 'PLAY', game_path(current_game) %>
    <% end %>

<div class="container-index-leaderboard">
  <%= current_user.name %>
  <%= current_user.batch_number %>
  <%= current_game.score %>
</div>
